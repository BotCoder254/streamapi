<!-- Two Column Layout -->
<div class="min-h-screen flex bg-gray-900">
    <!-- Left Column - Auth Form -->
    <div class="w-1/2 flex items-center justify-center p-8">
        <div class="max-w-md w-full">
            <!-- Logo -->
            <div class="text-center mb-8">
                <a href="/" class="inline-block">
                    <img src="/images/logo.png" alt="StreamAPI" class="h-12 mx-auto">
                </a>
            </div>

            <!-- Forgot Password Form -->
            <div class="bg-gray-800 rounded-lg p-8 shadow-2xl">
                <h2 class="text-2xl font-bold text-center mb-4">Reset Password</h2>
                <p class="text-gray-400 text-center mb-8">Enter your email address and we'll send you a link to reset your password.</p>

                <form action="/auth/forgot-password" method="POST" class="space-y-6">
                    <!-- Email Input -->
                    <div>
                        <label class="block text-gray-300 mb-2">Email Address</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                                <i class="far fa-envelope"></i>
                            </span>
                            <input type="email" name="email" required 
                                class="w-full bg-gray-700 text-white rounded-lg pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500"
                                placeholder="Enter your email">
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" 
                        class="w-full bg-green-600 hover:bg-green-500 text-white rounded-lg px-4 py-2 transition flex items-center justify-center gap-2">
                        <i class="fas fa-paper-plane"></i>
                        Send Reset Link
                    </button>
                </form>

                <!-- Back to Login -->
                <p class="text-center mt-6 text-gray-400">
                    Remember your password? 
                    <a href="/auth/login" class="text-green-500 hover:text-green-400">Back to login</a>
                </p>

                <!-- Help Section -->
                <div class="mt-8 p-4 bg-gray-700/50 rounded-lg">
                    <h3 class="text-lg font-semibold mb-3 flex items-center gap-2">
                        <i class="fas fa-question-circle text-green-500"></i>
                        Need Help?
                    </h3>
                    <ul class="space-y-2 text-sm text-gray-300">
                        <li class="flex items-start gap-2">
                            <i class="fas fa-info-circle text-blue-400 mt-1"></i>
                            <span>Make sure to check your spam folder if you don't receive the email.</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <i class="fas fa-clock text-yellow-500 mt-1"></i>
                            <span>The reset link will expire in 1 hour for security reasons.</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <i class="fas fa-envelope text-purple-400 mt-1"></i>
                            <span>If you still need help, contact our support team at support@streamapi.com</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column - Movie Slider -->
    <div class="w-1/2 bg-gray-800 p-8 flex items-center">
        <div class="relative w-full rounded-lg" style="height: 600px;">
            <!-- Movie Slider -->
            <div class="movie-slider absolute inset-0">
                <% latestMovies.forEach(movie => { %>
                    <div class="movie-slide absolute inset-0">
                        <img src="<%= movie.backdrop %>" alt="<%= movie.title %>" 
                            class="w-full h-full object-cover rounded-lg">
                        <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent rounded-lg"></div>
                        <div class="absolute bottom-0 left-0 right-0 p-8">
                            <h3 class="text-2xl font-bold mb-2"><%= movie.title %></h3>
                            <p class="text-gray-300 mb-4 line-clamp-2"><%= movie.overview %></p>
                            <div class="flex items-center gap-4">
                                <span class="flex items-center gap-1">
                                    <i class="fas fa-star text-yellow-500"></i>
                                    <%= movie.rating || '8.5' %>
                                </span>
                                <span class="flex items-center gap-1">
                                    <i class="fas fa-calendar text-blue-400"></i>
                                    <%= movie.year || '2024' %>
                                </span>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <!-- Slider Controls -->
            <button class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-black/50 hover:bg-black/75 text-white rounded-full p-3 transition slider-prev">
                <i class="fas fa-chevron-left"></i>
            </button>
            <button class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-black/50 hover:bg-black/75 text-white rounded-full p-3 transition slider-next">
                <i class="fas fa-chevron-right"></i>
            </button>

            <!-- Slider Pagination -->
            <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex gap-2 slider-pagination"></div>
        </div>
    </div>
</div>

<!-- Include Slider Script -->
<%- include('partials/auth-slider') %> 
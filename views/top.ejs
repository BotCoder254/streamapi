<!-- Top Rated Movies Listing -->
<div class="mb-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold"><i class="fas fa-star mr-2 text-yellow-500"></i>Top Rated Movies</h1>
        <div class="flex items-center">
            <a href="/top/tv" class="text-green-400 hover:text-green-300 transition">
                <i class="fas fa-tv mr-1"></i> Switch to TV Shows
            </a>
        </div>
    </div>
    
    <% if (movies && movies.length > 0) { %>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6">
            <% movies.forEach(movie => { %>
                <div class="movie-card bg-gray-800 rounded-lg overflow-hidden shadow-lg">
                    <a href="/view/movie/<%= movie.id %>">
                        <div class="relative pb-[150%] group">
                            <% if (movie.poster) { %>
                                <img src="<%= movie.poster %>" alt="<%= movie.title %>" class="absolute inset-0 w-full h-full object-cover">
                            <% } else { %>
                                <div class="absolute inset-0 w-full h-full bg-gray-700 flex items-center justify-center">
                                    <i class="fas fa-film text-4xl text-gray-500"></i>
                                </div>
                            <% } %>
                            <div class="absolute top-0 right-0 bg-yellow-600 px-2 py-1 m-2 rounded text-xs font-bold">
                                <i class="fas fa-star mr-1"></i> TOP
                            </div>
                            
                            <!-- Play Icon with Bounce Animation -->
                            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                <div class="play-icon bg-green-600/80 rounded-full p-4 transform group-hover:scale-110 transition-transform">
                                    <i class="fas fa-play text-xl"></i>
                                </div>
                            </div>
                            
                            <!-- Movie Details on Hover -->
                            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent py-2 px-3 transform translate-y-0 group-hover:translate-y-0 transition-transform">
                                <h3 class="text-sm md:text-base font-bold line-clamp-2"><%= movie.title %></h3>
                                <div class="mt-1 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                    <% if (movie.year) { %>
                                        <span class="text-xs text-gray-300"><%= movie.year %></span>
                                    <% } %>
                                    <% if (movie.rating) { %>
                                        <span class="text-xs ml-2">
                                            <i class="fas fa-star text-yellow-400 mr-1"></i><%= movie.rating %>
                                        </span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>

        <!-- Pagination -->
        <div class="mt-8 flex justify-center">
            <div class="flex space-x-1">
                <% if (parseInt(page) > 1) { %>
                    <a href="/top?p=<%= parseInt(page) - 1 %>" class="px-4 py-2 bg-gray-800 rounded-l-lg hover:bg-gray-700 transition">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                <% } else { %>
                    <span class="px-4 py-2 bg-gray-800 opacity-50 rounded-l-lg">
                        <i class="fas fa-chevron-left"></i>
                    </span>
                <% } %>

                <span class="px-4 py-2 bg-green-600 font-bold"><%= page %></span>

                <a href="/top?p=<%= parseInt(page) + 1 %>" class="px-4 py-2 bg-gray-800 rounded-r-lg hover:bg-gray-700 transition">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>
    <% } else { %>
        <div class="text-center py-12">
            <i class="fas fa-film text-6xl text-gray-700 mb-4"></i>
            <h2 class="text-2xl font-bold text-gray-400">No movies found</h2>
            <p class="mt-2 text-gray-500">Try refreshing the page or check your connection.</p>
        </div>
    <% } %>
</div>

<!-- Categories Section -->
<div class="mb-10">
    <h2 class="text-2xl font-bold mb-6"><i class="fas fa-layer-group mr-2"></i>Browse by Genre</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 animate__animated animate__fadeIn">
        <a href="/results?q=drama" class="bg-gradient-to-r from-red-600 to-red-800 rounded-lg p-6 text-center hover:shadow-lg transform hover:-translate-y-1 transition">
            <i class="fas fa-theater-masks text-3xl mb-3"></i>
            <h3 class="text-lg font-bold">Drama</h3>
        </a>
        <a href="/results?q=action" class="bg-gradient-to-r from-blue-600 to-blue-800 rounded-lg p-6 text-center hover:shadow-lg transform hover:-translate-y-1 transition">
            <i class="fas fa-bomb text-3xl mb-3"></i>
            <h3 class="text-lg font-bold">Action</h3>
        </a>
        <a href="/results?q=comedy" class="bg-gradient-to-r from-yellow-500 to-yellow-700 rounded-lg p-6 text-center hover:shadow-lg transform hover:-translate-y-1 transition">
            <i class="fas fa-laugh text-3xl mb-3"></i>
            <h3 class="text-lg font-bold">Comedy</h3>
        </a>
        <a href="/results?q=sci-fi" class="bg-gradient-to-r from-purple-600 to-purple-800 rounded-lg p-6 text-center hover:shadow-lg transform hover:-translate-y-1 transition">
            <i class="fas fa-rocket text-3xl mb-3"></i>
            <h3 class="text-lg font-bold">Sci-Fi</h3>
        </a>
    </div>
</div>

<!-- Quick Links -->
<div class="flex flex-wrap justify-center gap-4 mb-8">
    <a href="/browse" class="px-5 py-2 bg-gray-800 hover:bg-gray-700 rounded-lg transition flex items-center">
        <i class="fas fa-film mr-2"></i> Popular Movies
    </a>
    <a href="/search" class="px-5 py-2 bg-gray-800 hover:bg-gray-700 rounded-lg transition flex items-center">
        <i class="fas fa-search mr-2"></i> Search Movies
    </a>
    <a href="/latest" class="px-5 py-2 bg-gray-800 hover:bg-gray-700 rounded-lg transition flex items-center">
        <i class="fas fa-clock mr-2"></i> Latest Releases
    </a>
</div>

<!-- Animation Script -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add animation to category cards
        const categories = document.querySelectorAll('.grid a');
        categories.forEach((category, index) => {
            category.classList.add('animate__animated', 'animate__fadeInUp');
            category.style.animationDelay = `${index * 0.1}s`;
        });
    });
</script> 
<!-- TV Show Listing for Popular TV Shows -->
<div class="mb-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold"><i class="fas fa-tv mr-2"></i>Popular TV Shows</h1>
        <div class="flex items-center">
            <a href="/browse" class="text-green-400 hover:text-green-300 transition">
                <i class="fas fa-film mr-1"></i> Switch to Movies
            </a>
        </div>
    </div>
    
    <% if (shows && shows.length > 0) { %>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6">
            <% shows.forEach(show => { %>
                <div class="movie-card bg-gray-800 rounded-lg overflow-hidden shadow-lg">
                    <a href="/view/tv/<%= show.id %>">
                        <div class="relative pb-[150%]">
                            <% if (show.poster) { %>
                                <img src="<%= show.poster %>" alt="<%= show.title %>" class="absolute inset-0 w-full h-full object-cover">
                            <% } else { %>
                                <div class="absolute inset-0 w-full h-full bg-gray-700 flex items-center justify-center">
                                    <i class="fas fa-tv text-4xl text-gray-500"></i>
                                </div>
                            <% } %>
                            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent py-2 px-3">
                                <h3 class="text-sm md:text-base font-bold line-clamp-2"><%= show.title %></h3>
                            </div>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>

        <!-- Pagination -->
        <div class="mt-8 flex justify-center">
            <div class="flex space-x-1">
                <% if (parseInt(page) > 1) { %>
                    <a href="/browse/tv?p=<%= parseInt(page) - 1 %>" class="px-4 py-2 bg-gray-800 rounded-l-lg hover:bg-gray-700 transition">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                <% } else { %>
                    <span class="px-4 py-2 bg-gray-800 opacity-50 rounded-l-lg">
                        <i class="fas fa-chevron-left"></i>
                    </span>
                <% } %>

                <span class="px-4 py-2 bg-green-600 font-bold"><%= page %></span>

                <a href="/browse/tv?p=<%= parseInt(page) + 1 %>" class="px-4 py-2 bg-gray-800 rounded-r-lg hover:bg-gray-700 transition">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>
    <% } else { %>
        <div class="text-center py-12">
            <i class="fas fa-tv text-6xl text-gray-700 mb-4"></i>
            <h2 class="text-2xl font-bold text-gray-400">No TV shows found</h2>
            <p class="mt-2 text-gray-500">Try refreshing the page or check your connection.</p>
        </div>
    <% } %>
</div>

<!-- Featured Categories Section -->
<div class="mb-10">
    <h2 class="text-2xl font-bold mb-6"><i class="fas fa-layer-group mr-2"></i>Browse by Category</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 animate__animated animate__fadeIn">
        <a href="/results/tv?q=drama" class="bg-gradient-to-r from-red-600 to-red-800 rounded-lg p-6 text-center hover:shadow-lg transform hover:-translate-y-1 transition">
            <i class="fas fa-theater-masks text-3xl mb-3"></i>
            <h3 class="text-lg font-bold">Drama</h3>
        </a>
        <a href="/results/tv?q=comedy" class="bg-gradient-to-r from-yellow-500 to-yellow-700 rounded-lg p-6 text-center hover:shadow-lg transform hover:-translate-y-1 transition">
            <i class="fas fa-laugh text-3xl mb-3"></i>
            <h3 class="text-lg font-bold">Comedy</h3>
        </a>
        <a href="/results/tv?q=crime" class="bg-gradient-to-r from-blue-700 to-blue-900 rounded-lg p-6 text-center hover:shadow-lg transform hover:-translate-y-1 transition">
            <i class="fas fa-fingerprint text-3xl mb-3"></i>
            <h3 class="text-lg font-bold">Crime</h3>
        </a>
        <a href="/results/tv?q=fantasy" class="bg-gradient-to-r from-purple-600 to-purple-800 rounded-lg p-6 text-center hover:shadow-lg transform hover:-translate-y-1 transition">
            <i class="fas fa-dragon text-3xl mb-3"></i>
            <h3 class="text-lg font-bold">Fantasy</h3>
        </a>
    </div>
</div>

<!-- Quick Links -->
<div class="flex flex-wrap justify-center gap-4 mb-8">
    <a href="/search/tv" class="px-5 py-2 bg-gray-800 hover:bg-gray-700 rounded-lg transition flex items-center">
        <i class="fas fa-search mr-2"></i> Search Shows
    </a>
    <a href="/top/tv" class="px-5 py-2 bg-gray-800 hover:bg-gray-700 rounded-lg transition flex items-center">
        <i class="fas fa-star mr-2"></i> Top Rated
    </a>
    <a href="/latest/tv" class="px-5 py-2 bg-gray-800 hover:bg-gray-700 rounded-lg transition flex items-center">
        <i class="fas fa-clock mr-2"></i> Latest
    </a>
    <a href="/latest/episodes" class="px-5 py-2 bg-gray-800 hover:bg-gray-700 rounded-lg transition flex items-center">
        <i class="fas fa-play-circle mr-2"></i> Latest Episodes
    </a>
</div>

<!-- Animation Script -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add animation to category cards
        const categories = document.querySelectorAll('.grid a');
        categories.forEach((category, index) => {
            category.classList.add('animate__animated', 'animate__fadeInUp');
            category.style.animationDelay = `${index * 0.1}s`;
        });
    });
</script> 
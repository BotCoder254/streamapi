<div class="flex flex-col items-center justify-center py-12 animate__animated animate__fadeIn">
    <div class="text-center max-w-lg">
        <div class="mb-8 animate__animated animate__pulse animate__infinite animate__slower">
            <% if (code === 404) { %>
                <i class="fas fa-search text-7xl text-gray-600 mb-6 transform hover:scale-105 transition-transform"></i>
                <h1 class="text-5xl font-bold mb-3 text-gray-200">404</h1>
            <% } else if (code === 500) { %>
                <i class="fas fa-exclamation-triangle text-7xl text-yellow-500 mb-6 transform hover:scale-105 transition-transform"></i>
                <h1 class="text-5xl font-bold mb-3 text-gray-200">500</h1>
            <% } else if (code === 401) { %>
                <i class="fas fa-lock text-7xl text-blue-500 mb-6 transform hover:scale-105 transition-transform"></i>
                <h1 class="text-5xl font-bold mb-3 text-gray-200">401</h1>
            <% } else if (code === 403) { %>
                <i class="fas fa-ban text-7xl text-red-500 mb-6 transform hover:scale-105 transition-transform"></i>
                <h1 class="text-5xl font-bold mb-3 text-gray-200">403</h1>
            <% } else { %>
                <i class="fas fa-exclamation-circle text-7xl text-red-500 mb-6 transform hover:scale-105 transition-transform"></i>
                <h1 class="text-5xl font-bold mb-3 text-gray-200">Error</h1>
            <% } %>
            
            <h2 class="text-2xl text-gray-300 mb-4"><%= msg %></h2>
            
            <% if (code === 404) { %>
                <p class="text-gray-400 animate__animated animate__fadeIn animate__delay-1s">The page you're looking for might have been moved or doesn't exist.</p>
            <% } else if (code === 500) { %>
                <p class="text-gray-400 animate__animated animate__fadeIn animate__delay-1s">Our servers encountered an issue. Please try again later.</p>
            <% } else if (code === 401) { %>
                <p class="text-gray-400 animate__animated animate__fadeIn animate__delay-1s">You need to be authenticated to access this resource.</p>
            <% } else if (code === 403) { %>
                <p class="text-gray-400 animate__animated animate__fadeIn animate__delay-1s">You don't have permission to access this resource.</p>
            <% } %>
        </div>
        
        <div class="flex flex-col md:flex-row items-center justify-center space-y-4 md:space-y-0 md:space-x-4 mt-8">
            <a href="javascript:history.back()" class="w-full md:w-auto px-6 py-3 bg-gray-800 hover:bg-gray-700 rounded-lg transition-all transform hover:scale-105 flex items-center justify-center btn-hover-effect">
                <i class="fas fa-arrow-left mr-2"></i> Go Back
            </a>
            
            <a href="/" class="w-full md:w-auto px-6 py-3 bg-green-600 hover:bg-green-700 rounded-lg transition-all transform hover:scale-105 flex items-center justify-center btn-hover-effect">
                <i class="fas fa-home mr-2"></i> Go to Homepage
            </a>
            
            <a href="/search" class="w-full md:w-auto px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg transition-all transform hover:scale-105 flex items-center justify-center btn-hover-effect">
                <i class="fas fa-search mr-2"></i> Search
            </a>
        </div>
        
        <div class="mt-12 animate__animated animate__fadeIn animate__delay-2s">
            <h3 class="text-xl font-semibold text-gray-300 mb-4">You might also like:</h3>
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
                <a href="/browse" class="bg-gray-800 hover:bg-gray-700 p-3 rounded-lg transition-all transform hover:scale-105">
                    <i class="fas fa-film text-xl text-gray-400 mb-2"></i>
                    <p class="text-sm">Movies</p>
                </a>
                <a href="/browse/tv" class="bg-gray-800 hover:bg-gray-700 p-3 rounded-lg transition-all transform hover:scale-105">
                    <i class="fas fa-tv text-xl text-gray-400 mb-2"></i>
                    <p class="text-sm">TV Shows</p>
                </a>
                <a href="/latest" class="bg-gray-800 hover:bg-gray-700 p-3 rounded-lg transition-all transform hover:scale-105">
                    <i class="fas fa-clock text-xl text-gray-400 mb-2"></i>
                    <p class="text-sm">Latest</p>
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    // Add animation to the error icon
    document.addEventListener('DOMContentLoaded', function() {
        const errorIcon = document.querySelector('.fas');
        if (errorIcon) {
            errorIcon.addEventListener('mouseover', function() {
                this.classList.add('animate__animated', 'animate__tada');
            });
            
            errorIcon.addEventListener('animationend', function() {
                this.classList.remove('animate__animated', 'animate__tada');
            });
        }
    });
</script> 
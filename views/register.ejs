<!-- Two Column Layout -->
<div class="min-h-screen flex flex-col md:flex-row bg-gray-900">
    <!-- Left Column - Auth Form -->
    <div class="w-full md:w-1/2 flex items-center justify-center p-4 md:p-8">
        <div class="max-w-md w-full">
            <!-- Logo -->
            <div class="text-center mb-8">
                <a href="/" class="inline-block">
                    <img src="/images/logo.png" alt="StreamAPI" class="h-12 mx-auto">
                </a>
            </div>

            <!-- Register Form -->
            <div class="bg-gray-800 rounded-lg p-6 md:p-8 shadow-2xl">
                <h2 class="text-2xl font-bold text-center mb-6">Create an Account</h2>
                
                <!-- Display Errors -->
                <% if(typeof errors !== 'undefined' && errors.length > 0) { %>
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                        <% errors.forEach(function(error) { %>
                            <p><%= error.msg %></p>
                        <% }); %>
                    </div>
                <% } %>
                
                <!-- Social Register Buttons -->
                <div class="grid grid-cols-2 gap-4 mb-6">
                    <button class="flex items-center justify-center gap-2 bg-[#4285F4] hover:bg-[#4285F4]/90 text-white rounded-lg px-4 py-2 transition">
                        <i class="fab fa-google text-xl"></i>
                        <span class="hidden sm:inline">Google</span>
                    </button>
                    <button class="flex items-center justify-center gap-2 bg-[#3b5998] hover:bg-[#3b5998]/90 text-white rounded-lg px-4 py-2 transition">
                        <i class="fab fa-facebook-f text-xl"></i>
                        <span class="hidden sm:inline">Facebook</span>
                    </button>
                </div>

                <div class="relative my-6">
                    <hr class="border-gray-600">
                    <span class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-gray-800 px-4 text-gray-400 text-sm">or</span>
                </div>

                <form action="/auth/register" method="POST" class="space-y-6">
                    <!-- Full Name Input -->
                    <div>
                        <label class="block text-gray-300 mb-2">Full Name</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                                <i class="far fa-user"></i>
                            </span>
                            <input type="text" name="name" required 
                                class="w-full bg-gray-700 text-white rounded-lg pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500"
                                placeholder="Enter your full name"
                                value="<%= typeof name != 'undefined' ? name : '' %>">
                        </div>
                    </div>

                    <!-- Email Input -->
                    <div>
                        <label class="block text-gray-300 mb-2">Email Address</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                                <i class="far fa-envelope"></i>
                            </span>
                            <input type="email" name="email" required 
                                class="w-full bg-gray-700 text-white rounded-lg pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500"
                                placeholder="Enter your email"
                                value="<%= typeof email != 'undefined' ? email : '' %>">
                        </div>
                    </div>

                    <!-- Password Input -->
                    <div>
                        <label class="block text-gray-300 mb-2">Password</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input type="password" name="password" required 
                                class="w-full bg-gray-700 text-white rounded-lg pl-10 pr-10 py-2 focus:outline-none focus:ring-2 focus:ring-green-500"
                                placeholder="Create a password"
                                value="<%= typeof password != 'undefined' ? password : '' %>">
                            <button type="button" class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400 hover:text-gray-300 toggle-password">
                                <i class="far fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Confirm Password Input -->
                    <div>
                        <label class="block text-gray-300 mb-2">Confirm Password</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input type="password" name="password2" required 
                                class="w-full bg-gray-700 text-white rounded-lg pl-10 pr-10 py-2 focus:outline-none focus:ring-2 focus:ring-green-500"
                                placeholder="Confirm your password"
                                value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
                            <button type="button" class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400 hover:text-gray-300 toggle-password">
                                <i class="far fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Terms and Conditions -->
                    <div class="flex items-start">
                        <input type="checkbox" name="terms" required class="mt-1 mr-2 text-green-500">
                        <label class="text-sm text-gray-300">
                            I agree to the 
                            <a href="/terms" class="text-green-500 hover:text-green-400">Terms of Service</a>
                            and
                            <a href="/privacy" class="text-green-500 hover:text-green-400">Privacy Policy</a>
                        </label>
                    </div>

                    <!-- Register Button -->
                    <button type="submit" 
                        class="w-full bg-green-600 hover:bg-green-500 text-white rounded-lg px-4 py-2 transition flex items-center justify-center gap-2">
                        <i class="fas fa-user-plus"></i>
                        Create Account
                    </button>
                </form>

                <!-- Sign In Link -->
                <p class="text-center mt-6 text-gray-400">
                    Already have an account? 
                    <a href="/auth/login" class="text-green-500 hover:text-green-400">Sign in</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Right Column - Movie Slider -->
    <div class="hidden md:flex w-full md:w-1/2 p-8 items-center">
        <div class="relative w-full rounded-lg" style="height: 600px;">
            <!-- Movie Slider -->
            <div class="movie-slider absolute inset-0">
                <% latestMovies.forEach(movie => { %>
                    <div class="movie-slide absolute inset-0">
                        <img src="<%= movie.backdrop %>" alt="<%= movie.title %>" 
                            class="w-full h-full object-cover rounded-lg">
                        <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent rounded-lg"></div>
                        <div class="absolute bottom-0 left-0 right-0 p-8">
                            <h3 class="text-2xl font-bold mb-2"><%= movie.title %></h3>
                            <p class="text-gray-300 mb-4 line-clamp-2"><%= movie.overview %></p>
                            <div class="flex items-center gap-4">
                                <span class="flex items-center gap-1">
                                    <i class="fas fa-star text-yellow-500"></i>
                                    <%= movie.rating || '8.5' %>
                                </span>
                                <span class="flex items-center gap-1">
                                    <i class="fas fa-calendar text-blue-400"></i>
                                    <%= movie.year || '2024' %>
                                </span>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <!-- Slider Controls -->
            <button class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-black/50 hover:bg-black/75 text-white rounded-full p-3 transition slider-prev">
                <i class="fas fa-chevron-left"></i>
            </button>
            <button class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-black/50 hover:bg-black/75 text-white rounded-full p-3 transition slider-next">
                <i class="fas fa-chevron-right"></i>
            </button>

            <!-- Slider Pagination -->
            <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex gap-2 slider-pagination"></div>
        </div>
    </div>
</div>

<!-- Password Toggle Script -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Password toggle functionality
    document.querySelectorAll('.toggle-password').forEach(button => {
        button.addEventListener('click', function() {
            const input = this.previousElementSibling;
            const icon = this.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });
    });
});
</script>

<!-- Include Slider Script -->
<%- include('partials/auth-slider') %> 
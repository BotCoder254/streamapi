<!-- User Profile Page -->
<div class="max-w-4xl mx-auto bg-gray-800 rounded-lg shadow-xl overflow-hidden">
    <!-- Profile Header -->
    <div class="relative h-48 bg-gradient-to-r from-green-600 to-green-400">
        <div class="absolute -bottom-16 left-8">
            <div class="w-32 h-32 rounded-full border-4 border-gray-800 overflow-hidden bg-gray-700">
                <img src="https://avatar.iran.liara.run/public" alt="<%= user.name %>" class="w-full h-full object-cover">
            </div>
        </div>
    </div>

    <!-- Profile Content -->
    <div class="pt-20 pb-8 px-8">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
            <div>
                <h1 class="text-2xl font-bold mb-2"><%= user.name %></h1>
                <p class="text-gray-400"><%= user.email %></p>
            </div>
            <div class="mt-4 md:mt-0 flex gap-4">
                <button class="px-4 py-2 bg-green-600 hover:bg-green-500 rounded-lg transition flex items-center">
                    <i class="fas fa-edit mr-2"></i> Edit Profile
                </button>
                <button class="px-4 py-2 bg-red-600 hover:bg-red-500 rounded-lg transition flex items-center" onclick="confirmDeleteAccount()">
                    <i class="fas fa-trash-alt mr-2"></i> Delete Account
                </button>
            </div>
        </div>

        <!-- Settings Sections -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Account Settings -->
            <div class="bg-gray-700 rounded-lg p-6">
                <h2 class="text-xl font-bold mb-6"><i class="fas fa-user-cog mr-2"></i>Account Settings</h2>
                <form action="/auth/update-profile" method="POST" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium mb-2">Name</label>
                        <input type="text" name="name" value="<%= user.name %>" class="w-full bg-gray-800 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-2">Email</label>
                        <input type="email" name="email" value="<%= user.email %>" class="w-full bg-gray-800 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500">
                    </div>
                    <button type="submit" class="w-full px-4 py-2 bg-green-600 hover:bg-green-500 rounded-lg transition">
                        Save Changes
                    </button>
                </form>
            </div>

            <!-- Password Reset -->
            <div class="bg-gray-700 rounded-lg p-6">
                <h2 class="text-xl font-bold mb-6"><i class="fas fa-lock mr-2"></i>Change Password</h2>
                <form action="/auth/change-password" method="POST" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium mb-2">Current Password</label>
                        <input type="password" name="currentPassword" class="w-full bg-gray-800 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-2">New Password</label>
                        <input type="password" name="newPassword" class="w-full bg-gray-800 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-2">Confirm New Password</label>
                        <input type="password" name="confirmPassword" class="w-full bg-gray-800 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500">
                    </div>
                    <button type="submit" class="w-full px-4 py-2 bg-green-600 hover:bg-green-500 rounded-lg transition">
                        Update Password
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Account Confirmation Modal -->
<div id="deleteAccountModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center">
    <div class="bg-gray-800 rounded-lg p-8 max-w-md w-full mx-4">
        <h3 class="text-xl font-bold mb-4">Delete Account</h3>
        <p class="text-gray-400 mb-6">Are you sure you want to delete your account? This action cannot be undone.</p>
        <div class="flex justify-end gap-4">
            <button onclick="closeDeleteModal()" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg transition">
                Cancel
            </button>
            <form action="/auth/delete-account" method="POST" class="inline">
                <button type="submit" class="px-4 py-2 bg-red-600 hover:bg-red-500 rounded-lg transition">
                    Delete Account
                </button>
            </form>
        </div>
    </div>
</div>

<script>
function confirmDeleteAccount() {
    document.getElementById('deleteAccountModal').classList.remove('hidden');
}

function closeDeleteModal() {
    document.getElementById('deleteAccountModal').classList.add('hidden');
}
</script> 
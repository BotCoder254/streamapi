<%- include('../partials/head') %>
<body class="bg-gray-900 text-white min-h-screen lg:w-1/2">
<!-- Register Page with Split Layout -->
<div class="min-h-screen flex">
    <!-- Left Side - Trending Movies Slider -->
    <div class="hidden lg:flex lg:w-1/2 bg-gray-900">
        <div class="w-full relative overflow-hidden">
            <div id="auth-slider" class="relative w-full h-full">
                <!-- Slider content will be dynamically populated -->
                <div class="absolute inset-0 bg-gradient-to-r from-black/80 to-transparent z-10"></div>
                <div class="absolute inset-0 flex items-center z-20 px-8">
                    <div class="text-white max-w-lg">
                        <h2 class="text-3xl font-bold mb-4">Join StreamAPI</h2>
                        <p class="text-gray-300 mb-6">Create your account to start streaming your favorite content.</p>
                        <div class="flex space-x-4">
                            <a href="/auth/login" class="bg-gray-800 hover:bg-gray-700 text-white px-6 py-3 rounded-lg transition flex items-center btn-hover-effect">
                                <i class="fas fa-sign-in-alt mr-2"></i> Sign In
                            </a>
                            <a href="/browse" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg transition flex items-center btn-hover-effect">
                                <i class="fas fa-film mr-2"></i> Browse Movies
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Side - Registration Form -->
    <div class="w-full lg:w-1/2 flex items-center justify-center p-8 bg-gray-800">
        <div class="w-full max-w-md space-y-8 animate__animated animate__fadeIn">
            <!-- Logo -->
            <div class="text-center">
                <h2 class="text-4xl font-bold text-white mb-2">Create Account</h2>
                <p class="text-gray-400">Fill in your details to get started</p>
            </div>

            <!-- Alert Messages -->
            <% if (locals.error) { %>
                <div class="bg-red-500/10 border border-red-500 text-red-500 px-4 py-3 rounded relative" role="alert">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    <span class="block sm:inline"><%= error %></span>
                </div>
            <% } %>

            <!-- Registration Form -->
            <form action="/auth/register" method="POST" enctype="multipart/form-data" class="mt-8 space-y-6">
                <!-- Profile Picture Upload -->
                <div class="flex flex-col items-center space-y-4">
                    <div class="w-32 h-32 rounded-full overflow-hidden bg-gray-700 border-2 border-green-500">
                        <img id="profile-preview" src="https://avatar.iran.liara.run/public" alt="Profile Preview" class="w-full h-full object-cover">
                    </div>
                    <div class="relative">
                        <input type="file" id="profile" name="profile" accept="image/*" class="hidden" onchange="previewImage(this)">
                        <label for="profile" class="cursor-pointer inline-flex items-center px-4 py-2 border border-gray-600 rounded-lg bg-gray-700 text-white hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-green-500">
                            <i class="fas fa-camera mr-2"></i>
                            Choose Photo
                        </label>
                    </div>
                </div>

                <div class="space-y-4 rounded-md shadow-sm">
                    <!-- Username -->
                    <div>
                        <label for="username" class="sr-only">Username</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-user text-gray-400"></i>
                            </div>
                            <input id="username" name="username" type="text" required 
                                class="appearance-none rounded-lg relative block w-full px-3 py-3 pl-10 
                                border border-gray-700 bg-gray-900 text-gray-300 placeholder-gray-500
                                focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
                                placeholder="Username">
                        </div>
                    </div>

                    <!-- Email -->
                    <div>
                        <label for="email" class="sr-only">Email address</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-envelope text-gray-400"></i>
                            </div>
                            <input id="email" name="email" type="email" required 
                                class="appearance-none rounded-lg relative block w-full px-3 py-3 pl-10 
                                border border-gray-700 bg-gray-900 text-gray-300 placeholder-gray-500
                                focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
                                placeholder="Email address">
                        </div>
                    </div>

                    <!-- Password -->
                    <div>
                        <label for="password" class="sr-only">Password</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock text-gray-400"></i>
                            </div>
                            <input id="password" name="password" type="password" required 
                                class="appearance-none rounded-lg relative block w-full px-3 py-3 pl-10 
                                border border-gray-700 bg-gray-900 text-gray-300 placeholder-gray-500
                                focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
                                placeholder="Password">
                        </div>
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label for="confirm_password" class="sr-only">Confirm Password</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock text-gray-400"></i>
                            </div>
                            <input id="confirm_password" name="confirm_password" type="password" required 
                                class="appearance-none rounded-lg relative block w-full px-3 py-3 pl-10 
                                border border-gray-700 bg-gray-900 text-gray-300 placeholder-gray-500
                                focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
                                placeholder="Confirm Password">
                        </div>
                    </div>
                </div>

                <!-- Terms and Conditions -->
                <div class="flex items-center">
                    <input id="terms" name="terms" type="checkbox" required
                        class="h-4 w-4 text-green-500 focus:ring-green-500 border-gray-600 rounded bg-gray-700">
                    <label for="terms" class="ml-2 block text-sm text-gray-400">
                        I agree to the <a href="/terms" class="text-green-500 hover:text-green-400">Terms of Service</a> and 
                        <a href="/privacy" class="text-green-500 hover:text-green-400">Privacy Policy</a>
                    </label>
                </div>

                <div>
                    <button type="submit" 
                        class="group relative w-full flex justify-center py-3 px-4 border border-transparent 
                        text-sm font-medium rounded-lg text-white bg-green-600 hover:bg-green-700 
                        focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 
                        transition-colors duration-200">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                            <i class="fas fa-user-plus text-green-500 group-hover:text-green-400"></i>
                        </span>
                        Create Account
                    </button>
                </div>

                <div class="text-center space-y-4">
                    <p class="text-sm text-gray-400">
                        Already have an account? 
                        <a href="/auth/login" class="font-medium text-green-500 hover:text-green-400">
                            <i class="fas fa-sign-in-alt mr-1"></i>
                            Sign in
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Auth Slider JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const sliderEl = document.getElementById('auth-slider');
    let currentSlide = 0;
    let slides = [];

    // Fetch trending movies for the slider
    fetch('/api/trending?mediaType=movie&timeWindow=week')
        .then(response => response.json())
        .then(data => {
            if (data.success && data.results) {
                slides = data.results.slice(0, 5);
                if (slides.length > 0) {
                    createSlides();
                    startSlideshow();
                }
            }
        })
        .catch(console.error);

    function createSlides() {
        slides.forEach((movie, index) => {
            const slide = document.createElement('div');
            slide.className = `absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`;
            slide.style.backgroundImage = `url(https://image.tmdb.org/t/p/original${movie.backdrop_path})`;
            slide.style.backgroundSize = 'cover';
            slide.style.backgroundPosition = 'center';
            sliderEl.appendChild(slide);
        });
    }

    function startSlideshow() {
        setInterval(() => {
            const slides = sliderEl.children;
            slides[currentSlide].classList.remove('opacity-100');
            slides[currentSlide].classList.add('opacity-0');
            
            currentSlide = (currentSlide + 1) % slides.length;
            
            slides[currentSlide].classList.remove('opacity-0');
            slides[currentSlide].classList.add('opacity-100');
        }, 5000);
    }
});

// Profile image preview
function previewImage(input) {
    if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('profile-preview').src = e.target.result;
        }
        reader.readAsDataURL(input.files[0]);
    }
}
</script>

<!-- Add custom styles -->
<style>
.animate__animated {
    animation-duration: 0.5s;
}

.btn-hover-effect {
    position: relative;
    overflow: hidden;
}

.btn-hover-effect:after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.btn-hover-effect:hover:after {
    width: 300%;
    height: 300%;
}
</style>
</body>
</html> 